@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">    
  <div class="row">
      <div class="col-lg-12">
            <h2 class="text-primary fw-bold text-center">User Information</h2>
            <div>
                <p><strong>Full Name:</strong> @Model.FullName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>City:</strong> @Model.City</p>
                <p><strong>Post Code:</strong> @Model.Country</p>
            </div>
      </div>
  </div>  
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12 bg-info p-4 my-4">
            <form asp-area="" asp-controller="Home" asp-action="Index" method="post" asp-antiforgery="true">
                <div class="row">
                    <div class="col-lg-3">
                        <input class="form-control" type="text" asp-for="FullName" />
                    </div>
                    <div class="col-lg-3">
                        <input class="form-control" type="text" asp-for="Email" />
                    </div>
                    <div class="col-lg-3">
                        <input class="form-control" type="text" asp-for="City" />
                    </div>
                    <div class="col-lg-3">
                        <input class="form-control" type="text" asp-for="Country" />
                    </div>                                    
                </div>
                <button class="btn btn-primary fw-bold mt-3" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>

